<div class="container">
  <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-4 g-3">
    <% books.each do |book| %>
      <div class="col" style="margin-top: 50px;">
        <div class="book d-flex flex-column h-100">
          <div class="card rounded-4 shadow bg-primary-lighter position-relative" style="flex: 1;">
            <div id="carousel<%= book.id %>" class="carousel slide" data-bs-ride="carousel" style="height: 180px; overflow: hidden; position: relative;">
              <div class="carousel-inner rounded-top-4">
                <% if book.photos.attached? %>
                  <% book.photos.each_with_index do |photo, index| %>
                    <div class="carousel-book <%= 'active' if index == 0 %>">
                      <%= cl_image_tag photo.key, class: "d-block w-100 img-fluid", style: "object-fit: cover; height: 180px" %>
                      <!-- Category name at the bottom over the image -->
                      <p class="card-text font-size-12 mb-0 position-absolute bottom-0 start-0 end-0 text-center p-2" style="background-color: rgba(255, 255, 255, 0.7);"><%= book.category.name %></p>
                    </div>
                  <% end %>
                <% end %>
              </div>
              <a class="carousel-control-prev" href="#carousel<%= book.id %>" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carousel<%= book.id %>" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </a>
            </div>
            <div class="card-body d-flex flex-column" style="overflow: hidden;">
              <h3 class="card-title title-fixed-height font-size-24" style="padding: 6px; overflow: hidden; white-space: initial;">
                <%= book.title %>
              </h3>
              <p class="card-text font-size-14 mb-0"> <%= book.description %>.</p>
              <!-- Add swipe buttons -->
              <div class="d-flex justify-content-between mt-auto">
                <button type="button" class="btn btn-danger" onclick="swipeLeft(<%= book.id %>)">Reject</button>
                <button type="button" class="btn btn-success" onclick="swipeRight(<%= book.id %>)">Accept</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



<script>
  function swipeLeft(bookId) {
    // Implement logic to handle left swipe
    console.log('Book ID ' + bookId + ' swiped left');
  }

  function swipeRight(bookId) {
    // Implement logic to handle right swipe
    console.log('Book ID ' + bookId + ' swiped right');
  }
</script>
